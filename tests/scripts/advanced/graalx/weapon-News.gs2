function onTabSelect(tabs)
{
  for (temp.tab: temp.tabs.rows)
  {
    if (temp.tab.pane == null)
    {
      continue;
    }
    
    if (temp.tab == temp.tabs.selected)
    {
      temp.tab.pane.show();
    }
    else
    {
      temp.tab.pane.hide();
    }
  }
}